<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <filter>
    <filter-name>AutoFilter</filter-name>
    <filter-class>com.yz.furn.filter.AutoFilter</filter-class>
    <init-param>
      <param-name>excludeFilterUrl</param-name>
      <param-value>/views/manage/manage_login.jsp,/views/manage/login.jsp</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>AutoFilter</filter-name>
    <url-pattern>/views/cart/cart.jsp</url-pattern>
    <url-pattern>/views/manage/*</url-pattern>
    <url-pattern>/views/member/*</url-pattern>
    <url-pattern>/views/order/*</url-pattern>
    <url-pattern>/manage/manageFurns</url-pattern>
    <url-pattern>/cart</url-pattern>
    <url-pattern>/order</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>TransactionFilter</filter-name>
    <filter-class>com.yz.furn.filter.TransactionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>TransactionFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>MemberServlet</servlet-name>
    <servlet-class>com.yz.furn.web.MemberServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MemberServlet</servlet-name>
    <url-pattern>/member</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoginAdmin</servlet-name>
    <servlet-class>com.yz.furn.web.LoginAdminServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginAdmin</servlet-name>
    <url-pattern>/loginAdmin</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ManageFurns</servlet-name>
    <servlet-class>com.yz.furn.web.ManageFurnsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ManageFurns</servlet-name>
    <url-pattern>/manage/manageFurns</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CustomerFurns</servlet-name>
    <servlet-class>com.yz.furn.web.CustomerFurnsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CustomerFurns</servlet-name>
    <url-pattern>/customer/customerFurns</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>KaptchaServlet</servlet-name>
    <servlet-class>com.google.code.kaptcha.servlet.KaptchaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>KaptchaServlet</servlet-name>
    <url-pattern>/kaptcha</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Cart</servlet-name>
    <servlet-class>com.yz.furn.web.CartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Cart</servlet-name>
    <url-pattern>/cart</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Order</servlet-name>
    <servlet-class>com.yz.furn.web.OrderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Order</servlet-name>
    <url-pattern>/order</url-pattern>
  </servlet-mapping>
